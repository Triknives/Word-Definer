<h2>Word: <%= @word.words %></h2>
<h3>Definition: <%= @definition.words.id%></h3>

<form action="/words/<%= @definition.words.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Change definition</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @definition.words.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.words.id %>">Back to <%= @definition.words.word_id %></a>
