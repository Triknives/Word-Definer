<h2><%=@word.name %></h2>
<h3>Definitions</h3>

  <% if @word.definition %>
    <ul>
      <% @word.definition.each do |definition| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.definitions %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no definitions listed for this word yet.</p>
  <% end %>

  <h3>Add a definition for this word</h3>
  <form action="/words/<%= @word.id %>/definitions" method="post">
    <label for="definition_word">Definition</label>
    <input id="definition_word" name="definition_word" class="form-control" type="text">
    <button type="submit" class="btn">Update definition</button>
  </form>

<p><a href="/words/<%= @word.id %>/edit">Edit word</a></p>
<p><a href="/words">Return to word list</a></p>
